<h2 class="ui center aligned icon header">
  Welcome to message me 
  <i class="blue circular smile icon"></i>
</h2>
<h3 class="ui center aligned header">Sign Up to continue</h3>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with(model: @user, html: {class: "ui form", role: "form"}, local: true) do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
          <%= f.button "Sign Up", class: "ui blue submit button" %>
        </div>
      <%end%>
    </div>
    <div class="middle aligned column">
      <%= link_to "Log In", login_path, class: "ui big blue button" %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>